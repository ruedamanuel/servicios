html(lang="en")
  head
    title="Node Boilerplate Status"
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //link(rel="stylesheet" href="/static/css/bootstrap.css")
    //link(rel="stylesheet" href="/static/css/theme.css")
    link(rel="stylesheet" href="/static/css/main.min.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")
    script(type="text/javascript" src="/static/js/bootstrap.min.js")
    script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js")
  body.container-fluid
    header
      .row
        .col-xs-12
          div(class="header-wrapper")
            h1 Node Boilerplate Status
    div(class="row main-wrapper")
      .row
        div(class="col-xs-12 col-md-4")
          p Redis Status: #{redisStatus}
          p Global Configuration:
          pre(class="pre-formatted") #{config}
        div(class="col-xs-12 col-md-4")
          p Environment: #{appEnv}
        div(class="col-xs-12 col-md-4")
          p Session Id: #{sessionId}
          pre(class="pre-formatted") Session: #{session}
    script(type="text/javascript" src="/static/js/main.js")